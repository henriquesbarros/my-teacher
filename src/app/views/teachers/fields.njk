<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
        > 
    </div>
</div>
<div class="item">
    <div>Nome completo</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Nome do professor"
            value="{{ teacher.name }}"
        >
    </div>
</div>
<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date" 
            name="birth_date" 
            value="{{ teacher.birth_date }}"
        >
    </div>
</div>
<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level">
            <option 
                value="medium"
                {% if teacher.education_level == "medium" %}
                    selected
                {% endif %}
                >Ensino Médio Completo
            </option>
            <option 
                value="higher"
                {% if teacher.education_level == "higher" %}
                    selected
                {% endif %}
                >Ensino Superior Completo
            </option>
            <option 
                value="masters"
                {% if teacher.education_level == "masters" %}
                    selected
                {% endif %}
                >Mestrado
            </option>
            <option 
                value="doctorate"
                {% if teacher.education_level == "doctorate" %}
                    selected
                {% endif %}
                >Doutorado
            </option>
        </select>
    </div>
</div>
<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input 
                type="radio" 
                name="class_type" 
                value="presential"
                {% if teacher.class_type == "presential" %}
                    checked
                {% endif %}
            >Presencial
        </span>
        <span>
            <input 
                type="radio" 
                name="class_type" 
                value="distance"
                {% if teacher.class_type == "distance" %}
                    checked
                {% endif %}
            >À distância
        </span>
    </div>
</div>
<div class="item">
    <div>Àrea de atuação</div>
    <input 
        type="text" 
        name="subjects_taught" 
        placeholder="Separe a(s) área(s) por vírgula"
        value="{{ teacher.subjects_taught }}"
    >
</div>

<button type="submit">Salvar</button>
