{% extends "layout.njk" %}

{% block content %}
<main>
    <form class="card" method="POST" action="/estudantes?_method=PUT">
        <section 
            class="avatar" 
            style="border-radius: 4px 0 0 4px; background: url({{ student.avatar_url }}) no-repeat center center / cover">
        </section>
        <section class="details">

            <h3>Editar estudante</h3>

            {% include 'students/fields.njk' %}

            <input type="hidden" name="id" value="{{ student.id }}">

        </section>
    </form>
</main>

{% include "../confirm.njk" %}

{% endblock content %}