{% extends "layout.njk" %}

{% block content %}
<main>
    <div class="card">
        <section 
            class="avatar" 
            style="border-radius: 4px 0 0 4px; background: url({{ student.avatar_url }}) no-repeat center center / cover">
        </section>
        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome completo</div>
                <div>{{ student.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ student.birth }}</div>
            </div>
            <div class="item">
                <div>Email</div>
                <div>{{ student.email }}</div>
            </div>
            <div class="item">
                <div>Ano escolar</div>
                <div>{{ student.school_year }}</div>
            </div>
            <div class="item">
                <div>Carga hor√°ria semanal (h)</div>
                <div>{{ student.workload }}</div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{ student.created_at }}</div>
            </div>
            <div class="item">
                <div>Aluno de :</div>
                <div>{{ student.teacher_name }}</div>
            </div>

            
            <form class="grid-button" method="POST" action="/estudantes?_method=DELETE" id="form-delete">
                <a class="button" href="/estudantes/{{ student.id }}/editar">Editar</a>
                <input type="hidden" name="id" value="{{ student.id }}">
                <button id="form-delete" class="button" type="submit">Deletar</button>
            </form>

        </section>
    </div>
</main>

{%  include '../confirm.njk'%}

{% endblock content %}